<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/back_ground"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:text="Fund Transfer"
        android:textSize="25dp"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/readQr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200px"
        android:background="@drawable/scan1"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/writeQr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:background="@drawable/generate"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20px"
        android:text="*Scan: Scan QR code generated on payees mobile."
        android:textColor="#ffffff"
        android:layout_gravity="left" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="*Generate: Generate your unique QR code to receive  funds."
        android:textColor="#ffffff"
        android:layout_gravity="left" />

</LinearLayout>